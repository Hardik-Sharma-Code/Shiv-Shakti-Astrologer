@model Shiv_Shakti_Astro.VM.CustomerVM


@{
    <form id="contactForm" asp-action="addCustomer" asp-controller="Customer" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" name="Name" type="text" id="txtname" placeholder="Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="birthDetails">Birth Details</label>
                    <div class="row">
                        <div class="row">
                            <div class="col-md-8">
                                <input class="form-control txtbirthleft" id="datetimeInput" name="BirthDate" type="datetime-local" placeholder="Birth Details" />
                            </div>
                            <div class="col-md-4">
                                <input class="form-control txtbirthleft txtbirthright" name="Place" type="text" placeholder="Birth Details" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="card">
                        <div class="card-header">
                            Physical Apperance
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <label class="form-label d-block">Gender</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" id="male" value="Male" type="radio" name="Gender" />
                                        <label class="form-check-label" for="male">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" id="female" value="Female" type="radio" name="Gender" />
                                        <label class="form-check-label" for="female">Female</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <label class="form-label" for="name">Complexion</label>
                                    <input class="form-control" name="Complexion" type="text" placeholder="Complexion" />
                                </div>
                                <div class="col">
                                    <label class="form-label" for="name">Height</label>
                                    <input class="form-control" name="Height" type="text" placeholder="Height" />
                                </div>
                                <div class="col">
                                    <label class="form-label" for="name">Built</label>
                                    <input class="form-control" name="Built" type="text" placeholder="Built" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="name">Caste & Gotra</label>
                    <input class="form-control" name="CasteGotra" type="text" placeholder="Caste" />
                </div>


            </div>
            <div class="col">

                <div class="mb-3">
                    <label class="form-label" for="name">Religion & Community</label>
                    <input class="form-control" name="RelegionCommunitity" type="text" placeholder="Relegion" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="name">Nationality</label>
                    <input class="form-control" name="Nationality" type="text" placeholder="Nationality" />
                </div>

                <div class="mb-3">
                    <label class="form-label d-block">Marital Status</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" id="single" value="Single" type="radio" name="MaritalStatus" />
                        <label class="form-check-label" for="single">Single</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" id="divorced" value="Divorced" type="radio" name="MaritalStatus" />
                        <label class="form-check-label" for="divorced">Divorced</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="name">Dietry Habbits</label>
                    <div class="row">
                        <div class="col">
                            @{
                                foreach (var item in Model.dietryList!)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input dchk" type="checkbox" value="@item.Value" id="dietrychk_@item.Text" checked="@item.IsChecked" name="dietrychk"> @item.Text <br />
                                    </div>

                                }
                                <input type="text" class="form-control dietry-habbits-input" name="DietryHabbits" readonly style="display: contents;">
                            }
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="name">Qualification</label>
                    <input class="form-control" name="Qualification" type="text" placeholder="Qualification" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="name">Occupation & Income</label>
                    <input class="form-control" name="OccupationIncome" type="text" placeholder="Occupation" />
                </div>



            </div>
            <div class="col">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Profile Pic</label>
                    <input class="form-control" type="file" id="inputFile" name="Profilepic">
                </div>

                <div class="mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <label class="form-label" for="name">Father</label>
                                    <input class="form-control" name="FatherName" type="text" placeholder="Father" />
                                </div>
                                <div class="col">
                                    <label class="form-label" for="name">Mother</label>
                                    <input class="form-control" name="MotherName" type="text" placeholder="Mother" />
                                </div>
                                <div class="col">
                                    <label class="form-label" for="name">Siblings</label>
                                    <input class="form-control" name="Siblings" type="text" placeholder="Siblings" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="name">Address</label>
                    @Html.DropDownList("AddressType", new List<SelectListItem>
                {
                new SelectListItem{ Text="Own", Value = "1" },
                new SelectListItem{ Text="Rented", Value = "2" },
                }, "select", new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    <input class="form-control" name="Address1" type="text" placeholder="Address" />
                </div>
                <div class="mb-3">
                    <input class="form-control" name="Address2" type="text" placeholder="Address" />
                </div>

                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="name">Contact No</label>
                            <input class="form-control" name="ContactNumber" type="text" placeholder="Contact Number" />
                        </div>
                        <div class="col">
                            <label class="form-label" for="name">Email</label>
                            <input class="form-control" name="Email" type="email" placeholder="Email" />
                        </div>
                    </div>

                </div>

                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="name">Hobbies</label>
                            <input class="form-control" name="Hobbies" type="text" placeholder="Hobbies" />
                        </div>
                        <div class="col">
                            <label class="form-label" for="name">Other Details</label>
                            <input class="form-control" name="OtherDetailes" type="text" placeholder="Other Details" />
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <div class="card">
                        <div class="card-header">
                            Partner Preferences
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-3">
                                        <label class="form-label d-block">Manglik</label>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" id="male" type="radio" value="Yes" name="PPManglik" />
                                            <label class="form-check-label" for="male">Yes</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" id="female" type="radio" value="No" name="PPManglik" />
                                            <label class="form-check-label" for="female">No</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <label class="form-label" for="name">Dietry Habbits</label>
                                        <div class="row">
                                            <div class="col">
                                                    @{
                                                        foreach (var item in Model.dietryList!)
                                                        {
                                                            <div class="form-check">
                                                                <input class="form-check-input ppdchk" type="checkbox" value="@item.Value" id="dietrychk_@item.Text" checked="@item.IsChecked" name="ppdietrychk"> @item.Text <br />
                                                            </div>

                                                        }
                                                        <input type="text" class="form-control ppdietry-habbits-input" name="PPDietryHabbit" readonly style="display: contents;">
                                                    }
                                        </div>
                                    </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="card">
                                            <div class="card-header">
                                                Physical Apperance
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col">
                                                        <label class="form-label d-block">Gender</label>
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input" id="male" type="radio" name="PPGender" />
                                                            <label class="form-check-label" for="male">Male</label>
                                                        </div>
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input" id="female" type="radio" name="PPGender" />
                                                            <label class="form-check-label" for="female">Female</label>
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label" for="name">Complexion</label>
                                                        <input class="form-control" name="PPComplexion" type="text" placeholder="Complexion" />
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label" for="name">Height</label>
                                                        <input class="form-control" name="PPHeight" type="text" placeholder="Height" />
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label" for="name">Built</label>
                                                        <input class="form-control" name="PPBuilt" type="text" placeholder="Built" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                            </div>
                            <div class="row">

                                <div class="mb-3 col">
                                    <label class="form-label" for="name">Caste & Gotra</label>
                                    <input class="form-control" name="PPCasteGotra" type="text" placeholder="Caste & Gotra" />
                                </div>

                                <div class="mb-3 col">
                                    <label class="form-label" for="name">Religion & Community</label>
                                    <input class="form-control" name="PPReligionCommunity" type="text" placeholder="Religion Community" />
                                </div>

                                <div class="mb-3 col">
                                    <label class="form-label" for="name">Qualification</label>
                                    <input class="form-control" name="PPQualification" type="text" placeholder="Qualification" />
                                </div>

                                <div class="mb-3 col">
                                    <label class="form-label" for="name">Occupation & Income</label>
                                    <input class="form-control" name="PPOccupationIncome" type="text" placeholder="Occupation" />
                                </div>
                            </div>






                            <div class="mb-3">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label" for="name">Preferred Country</label>
                                        <input class="form-control" name="PPCountry" type="text" placeholder="Country" />
                                    </div>
                                    <div class="col">
                                        <label class="form-label" for="name">State</label>
                                        <input class="form-control" name="PPState" type="text" placeholder="State" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="mb-3">
                        <button type="button" class="btn btn-secondary Savebtn" id="closemodal" onclick="this.form.reset();" data-bs-dismiss="modal">Close</button>
                        <button type="submit" id="save" class="btn btn-primary Savebtn">Save changes</button>
                </div>

            </div>
        </div>
    </form>
}
